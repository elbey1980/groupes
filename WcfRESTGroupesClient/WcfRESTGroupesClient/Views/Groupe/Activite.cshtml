@model WcfRESTGroupesClient.Activite

@{
    ViewData["Title"] = "Activite";
}

<h2>Ajouter une Activite</h2>

@*<h4>Activite</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Activite">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomActivite" class="control-label"></label>
                <input asp-for="NomActivite" class="form-control" />
                <span asp-validation-for="NomActivite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomAdmin" class="control-label"></label>
                <input asp-for="NomAdmin" class="form-control" />
                <span asp-validation-for="NomAdmin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Retour au menu principal </a><br>
    @*<a asp-action="Index">Back to List</a>*@
</div>

