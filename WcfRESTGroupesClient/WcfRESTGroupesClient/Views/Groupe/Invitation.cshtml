@model WcfRESTGroupesClient.Models.Adhesion

@{
    ViewData["Title"] = "Invitation";
}

<h2 align="center">Envoyer une Invitation</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Invitation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomGroupe" class="control-label"></label>
                <input asp-for="nomGroupe" class="form-control" />
                <span asp-validation-for="nomGroupe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <select asp-for="status" class="form-control">
                    <option value="">Selectionner une action</option>
                    <option value=1>Invitation</option>
                </select>
                @*<input asp-for="status" class="form-control" />*@
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userName" class="control-label"></label>
                <input asp-for="userName" class="form-control" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Back to List</a>*@
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Retour au menu principal </a><br>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
